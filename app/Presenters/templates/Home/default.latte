<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Testovací úlohy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="{link home:default}">Testovací úloha Nette</a>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link"  href="{link home:app1}">App1</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{link home:app2}">App2</a>
            </li>
			 <li class="nav-item">
              <a class="nav-link"  href="{link home:app3}">App3</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{link home:app4}">App4</a>
            </li>
			 <li class="nav-item">
              <a class="nav-link"  href="{link home:app5}">App5</a>
            </li>
           
           
            
          </ul>
          
        </div>
      </div>
    </nav>

    <div class="container my-5">
    {ifset $title}
    <h1>{$title}</h1>
    {/ifset}  
	  {ifset $table}
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>firstNumber</th>
	  <th>secondNumber</th>
	  <th>thirdNumber</th>
	  <th>calculation</th>
	  <th>joke</th>
	  <th>createdAt</th>
      
    </tr>
  </thead>
  <tbody>
    {foreach $table as $row}
		

    <tr>
       	<td>{$row['id']}</td>
	   	<td>{$row['name']}</td>
	   	<td>{$row['firstNumber']}</td>
	   	<td>{$row['secondNumber']}</td>
	   	<td>{$row['thirdNumber']}</td>
	   	<td>{$row['calculation']}</td>	
		<td>{$row['joke']}</td>
		<td>{$row['createdAt']}</td>
      
  
    </tr>
		
    {/foreach}
  </tbody>
</table>
{/ifset}

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="main.js"></script>
  </body>
</html>